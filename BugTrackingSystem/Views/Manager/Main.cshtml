@{
    Layout = "_BootstrapLayout";
    ViewData["title"] = "Manager Panel";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Manager Panel</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel" style="height:600px;">


                    <div class="x_content h-100">
                        <div class="row h-100">

                            <div class="col-md-12 h-100">
                                <div class="d-flex justify-content-around align-items-center h-100">
                                    <div class="card col-5" style="width: 18rem;">
                                        <img class="card-img-top" src="https://picsum.photos/600/300" alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title">Assign Developers to Project</h5>
                                            <p class="card-text">Choose the developers who you want you assign to your project.</p>
                                            <a href="#" class="btn btn-primary">Go to Panel</a>
                                        </div>
                                    </div>
                                    <div class="card col-5" style="width: 18rem;">
                                        <img class="card-img-top" src="https://picsum.photos/601/300" alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title">Assign Tickets to Developers</h5>
                                            <p class="card-text">Assign the tickets to the suitabl developers.</p>
                                            <a href="#" class="btn btn-primary">Go to Panel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

