@model BugTrackingSystem.Models.BugTrackerUser

@{
    Layout = "_BootstrapLayout";
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BugTrackerUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BugTrackerUserID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Role</label>

                <select class="custom-select" name="role">
                    @foreach (PropertyInfo property in typeof(RolesIDs).GetProperties())
                    {
                        string name = property.Name.Substring(0, property.Name.Length - 2);
                        bool selected = Model.Role?.ID == property.GetValue(null).ToString();
                        <option selected=@selected value="@property.GetValue(null).ToString()"> @name </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


